.container
  %h1 Listing blogs

  %table
    %thead
      %tr
        %th Name
        %th About
        %th
        %th
        %th

    %tbody
      - @blogs.each do |blog|
        %tr
          %td= blog.name
          %td= blog.about
          %td= link_to 'New Page', new_blog_page_path(blog)
          %td= link_to 'Pages', blog_pages_path(blog)
          %td= link_to 'Show', blog
          %td= link_to 'Edit', edit_blog_path(blog)
          %td= link_to 'Destroy', blog, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Blog', new_blog_path
