!!!
%html
  %head
    %title Pixova
    = csrf_meta_tags
    = action_cable_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload'
  %body
    .navbar-light
      .container

        %nav.navbar
          %a.navbar-brand{:href => "#"} Pixova

          %ul.nav.navbar-nav.pull-xs-right
            %li.nav-item.active
              = link_to 'Home', root_path, class: 'nav-link'
            - if user_signed_in?
              %li.nav-item
                = link_to 'Blogs', blogs_path, class: 'nav-link'
              %li.nav-item
                = link_to 'Dashboard', edit_user_registration_path, class: 'nav-link'
              %li.nav-item
                = link_to 'Logout', destroy_user_session_path, class: 'nav-link', method: :delete
            - else
              %li.nav-item
                = link_to 'Features', features_path, class: 'nav-link'
              %li.nav-item
                = link_to 'Pricing', pricing_path, class: 'nav-link'
              %li.nav-item
                = link_to 'Login', new_user_session_path, class: 'nav-link'
              %li.nav-item
                = link_to 'Sign Up', new_user_registration_path, class: 'nav-link'

    - if notice
      %div.alert.alert-success
        %p= notice
    - if alert
      %div.alert.alert-danger
        %p= alert

    = yield

    .container
      %ul
        %li= link_to 'About', about_path, class: 'nav-link'
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
